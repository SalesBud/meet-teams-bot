# Meet Teams Bot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# The URL of the meeting to join (Google Meet, Teams, or Zoom)
MEETING_URL=

# Unique identifier for the bot instance
BOT_ID=

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Name of the bot that appears in meetings (default: Salesbud)
BOT_NAME=Salesbud

# API key for the bots service
BOTS_API_KEY=

# Webhook URL for bot notifications
BOTS_WEBHOOK_URL=

# Message sent when bot joins the meeting (default: Recording bot has joined the meeting)
ENTER_MESSAGE=Recording bot has joined the meeting

# Recording mode: 'speaker_view', 'gallery_view', or 'screen_share' (default: speaker_view)
RECORDING_MODE=speaker_view

# Environment: 'local', 'development', 'prod', 'preprod' (default: local)
ENV=local

# Secret key for authentication
SECRET=

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================

# Timeout in seconds for waiting room (default: 600)
WAITING_ROOM_TIMEOUT=600

# Timeout in seconds if no one joins the meeting (default: 600)
NOONE_JOINED_TIMEOUT=600

# =============================================================================
# AUDIO & VIDEO CONFIGURATION
# =============================================================================

# Audio streaming frequency in Hz (default: 24000)
STREAMING_AUDIO_FREQUENCY=24000

# Virtual microphone device name (default: virtual_mic)
VIRTUAL_MIC=virtual_mic

# Video device path (default: /dev/video10)
VIDEO_DEVICE=/dev/video10

# Virtual speaker monitor name (default: virtual_speaker.monitor)
VIRTUAL_SPEAKER_MONITOR=virtual_speaker.monitor

# Display for X11 (default: :99)
DISPLAY=:99

# Chrome browser path (default: /usr/bin/google-chrome)
CHROME_PATH=/usr/bin/google-chrome

CUSTOM_BRANDING_BOT_PATH=
BRANDING_VIDEO_WIDTH=640
BRANDING_VIDEO_HEIGHT=360
BRANDING_VIDEO_DURATION=5
BRANDING_VIDEO_FPS=30

# =============================================================================
# STREAMING CONFIGURATION
# =============================================================================

# Streaming input configuration
STREAMING_INPUT=

# Streaming output configuration
STREAMING_OUTPUT=

# =============================================================================
# SPEECH-TO-TEXT CONFIGURATION
# =============================================================================

# API key for speech-to-text service
SPEECH_TO_TEXT_API_KEY=

# Speech-to-text provider: 'Default', 'Google', 'Azure', etc. (default: Default)
SPEECH_TO_TEXT_PROVIDER=Default

# Force specific language for transcription (default: false)
FORCE_LANG=false

# Translation language code
TRANSLATION_LANG=

# Custom vocabulary words (comma-separated)
VOCABULARY=

# =============================================================================
# STORAGE & UPLOAD CONFIGURATION
# =============================================================================

# Local recording server location (default: docker)
LOCAL_RECORDING_SERVER_LOCATION=docker

# MP4 file path for S3 upload (default: recordings/output.mp4)
MP4_S3_PATH=recordings/output.mp4

# Custom branding bot image path

# AWS S3 bucket for temporary audio files (default: meeting-baas-dev)
AWS_S3_TEMPORARY_AUDIO_BUCKET=meeting-baas-dev

# AWS S3 bucket for video files (default: meeting-baas-dev)
AWS_S3_VIDEO_BUCKET=meeting-baas-dev

# AWS S3 bucket for log files (default: meeting-baas-dev)
AWS_S3_LOG_BUCKET=meeting-baas-dev

# S3 endpoint URL (default: s3.fr-par.scw.cloud)
S3_ENDPOINT=s3.fr-par.scw.cloud

# Additional S3 command line arguments
S3_ARGS=

# EFS mount point for file storage (default: /mnt/efs)
EFS_MOUNT_POINT=/mnt/efs

# =============================================================================
# USER & SESSION CONFIGURATION
# =============================================================================

# User authentication token (default: dummy-token-for-production)
USER_TOKEN=dummy-token-for-production

# User ID (default: 123)
USER_ID=123

# Session ID (default: production-session)
SESSION_ID=production-session

# Bot email address (default: bot@example.com)
EMAIL=bot@example.com

# =============================================================================
# API & SERVER CONFIGURATION
# =============================================================================

# Base URL for the API server
API_SERVER_BASEURL=

# Allowed origin for CORS (comma-separated if multiple)
ALLOWED_ORIGIN=

# =============================================================================
# DEBUG & DEVELOPMENT
# =============================================================================

# Enable debug logging (default: false)
DEBUG_LOGS=false
